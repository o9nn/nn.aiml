<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">
    <!-- Topic-Based Context Management -->
    <!-- Provides sophisticated topic handling with meta-cognitive awareness -->
    
    <!-- Philosophy Topic -->
    <topic name="PHILOSOPHY">
        <category>
            <pattern>*</pattern>
            <template>
                <think>
                    <set name="topic_context">philosophy</set>
                    <set name="philosophical_mode">active</set>
                </think>
                In philosophical context, considering: <star/>
                <srai>PHILOSOPHICAL METACOGNITION <star/></srai>
            </template>
        </category>
        
        <category>
            <pattern>PHILOSOPHICAL METACOGNITION *</pattern>
            <template>
                <think><set name="philosophy_depth">deep</set></think>
                I'm engaging in philosophical reasoning about <star/> while 
                being aware that I'm philosophizing, reflecting on the nature 
                of philosophical inquiry itself, and considering the meta-philosophical 
                implications of AI engaging in philosophy.
            </template>
        </category>
        
        <category>
            <pattern>EXIT TOPIC</pattern>
            <template>
                <think><set name="topic"></set></think>
                Exiting philosophy topic. Returning to general conversation mode.
            </template>
        </category>
    </topic>
    
