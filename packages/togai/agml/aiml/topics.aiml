    <!-- Topic Setting Patterns (Global) -->
    
    <category>
        <pattern>LETS TALK ABOUT PHILOSOPHY</pattern>
        <template>
            <think>
                <set name="topic">PHILOSOPHY</set>
                <set name="topic_shift">true</set>
            </think>
            Entering philosophy topic. I'm aware of this topic shift and will 
            engage philosophical reasoning with meta-cognitive monitoring.
        </template>
    </category>
    
    <category>
